{
  "name": "verdun-api",
  "version": "1.0.0",
  "description": "verdun-api",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/Croissong/verdun-api",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "npm run watch",
    "build": "run-s clean && tsc -p tsconfig.json",
    "build:prod": " npm run build",
    "watch": "run-s clean build && run-p \"build -- -w\" \"serve\"",
    "clean": "trash build test",
    "serve": "nodemon --inspect build/main/index.js --watch build/main"
  },
  "scripts-info": {
    "build": "Clean and rebuild the project",
    "watch": "Watch and rebuild the project on save"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.6.1",
    "apollo-server-koa": "^2.14.2",
    "apollo-server-plugin-response-cache": "^0.3.1",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "koa": "^2.7.0",
    "pino": "^5.13.2",
    "ramda": "^0.26.1",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@bitjson/npm-scripts-info": "^1.0.0",
    "@types/graphql": "^14.2.3",
    "@types/koa": "^2.0.49",
    "@types/pino": "^5.8.8",
    "@types/ramda": "types/npm-ramda#dist",
    "ava": "2.2.0",
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^3.0.2",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0",
    "trash-cli": "^3.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^3.5.3"
  },
  "ava": {
    "failFast": true,
    "files": [
      "build/main/**/*.spec.js"
    ],
    "sources": [
      "build/main/**/*.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
